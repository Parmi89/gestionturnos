<%= form_with(model: [ :administration, advertising ], local: true) do |f| %>
  <% if advertising.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(advertising.errors.count, "error") %> prohibited this advertising from being saved:</h2>
      <ul>
      <% advertising.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>

  <div class="field">
  <%= f.label :Titulo %>
  <%= f.text_field :title, id: :advertising_title, class: 'form-control',:maxlength => 100 %>
  </div>
<div class="form-group">
  <%= f.label :Notas %>
  <%= f.text_field :observations, class: 'form-control',:maxlength => 100 %>
</div>
<div>
  <%= f.label :Estado %><br>
  <%= f.select :state,  Pendiente: "Pendiente", Activo: "Activo", Cancelado: "Cancelado" %>
</div>
<br>
<div class="field">
    <%= f.label :Fecha_alta %>
    <%= f.date_field :higdate, id: :advertising_higdate,  class: 'form-control' %>

    <%= f.label :Fecha_baja %>
    <%= f.date_field :lowdate, id: :advertising_lowdate,  class: 'form-control' %>
  </div>
  <center>

  <br><br>
  <%= f.file_field :image %><br>
  <br>
  <div class="actions">
    <%= f.submit "Aceptar", class: "btn-btn btn-success" %>
  </div>
<% end %>
</center>