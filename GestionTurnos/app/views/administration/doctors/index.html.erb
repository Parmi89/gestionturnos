
<h2>Doctores activos</h2>
<br><center>
  
<table border="3">
  <thead>
    <tr>
      <th><center><strong>Id. Doctor</center></strong></th>
      <th><center><strong>Apellido</center></strong></th>
      <th><center><strong>Nombre</center></strong></th>
      <th><center><strong>Consultorio</center></strong></th>
      <th><center><strong>Especialidad</center></strong></th>
      

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><center><%= doctor.id %></center></td>
        <td><center><%= doctor.last_name %></center></td>
        <td><center><%= doctor.first_name %></center></td>
        <td><center><%= doctor.consulting_room %></center></td>
        <td><center><%= doctor.specialty %></center></td>
        <td><%= link_to 'Ver solo este doctor', administration_doctor_path(doctor) %></td>
        <td><%= link_to 'Modificar', edit_administration_doctor_path(doctor) %></td>
        <td><%= link_to 'Eliminar', administration_doctor_path(doctor), method: :delete, data: { confirm: 'Usted esta seguro que desea eliminar este doctor?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div> 
</center>


